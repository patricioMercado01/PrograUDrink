<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="185sp">

        <ImageView
            android:id="@+id/logo2"
            android:layout_width="385sp"
            android:layout_height="184sp"
            app:srcCompat="@drawable/logo" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="78sp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/labelNombre"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Nombre :"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@android:color/background_dark"
            android:textSize="18sp"
            android:layout_margin="20sp"/>


        <EditText
            android:id="@+id/loginNameEdit"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:ems="10"
            android:layout_margin="20sp"
            android:fontFamily="serif-monospace"
            android:inputType="textPersonName"
            android:text="nombre"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textSize="18sp" />

    </LinearLayout>

 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="140sp">

     <TextView
         android:id="@+id/labelPass"
         android:layout_width="150sp"
         android:layout_height="wrap_content"
         android:layout_weight="2"
         android:layout_margin="20dp"
         android:text="Contraseña"
         android:textAppearance="@style/TextAppearance.AppCompat.Body1"
         android:textColor="@android:color/background_dark"
         android:textSize="18sp"
         />

     <EditText
         android:id="@+id/loginPassEdit"
         android:layout_width="150sp"
         android:layout_height="wrap_content"
         android:layout_weight="2"
         android:layout_margin="20dp"
         android:ems="10"
         android:inputType="textPassword"
         android:text="contraseña" />

 </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="78sp"
    android:orientation="horizontal"
    >

    <Button
        android:id="@+id/btnIngresarLog"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textPass"
        android:layout_marginTop="20sp"
        android:layout_margin="15sp"
        android:background="@color/colorPrimary"
        android:layout_weight="2"
        android:text="Ingresar"

        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textColor="@android:color/background_light" />

    <Button
        android:id="@+id/btnRegistrar"
        style="@style/Widget.AppCompat.Button"
        android:layout_weight="2"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:layout_margin="15sp"
        android:layout_marginTop="20dp"
        android:background="@color/colorPrimary"
        android:text="Registrar"
        android:textColor="@android:color/background_light" />
</LinearLayout>


</LinearLayout>
