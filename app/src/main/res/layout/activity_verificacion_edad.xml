<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="center"
        android:visibility="visible"
        app:srcCompat="@drawable/logo" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btnSi"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="60dp"
            android:text="Esta aplicación está diseñada únicamete a los usuarios que sean mayores de 18 años, ¿Cumple ustéd este requisito?"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnSi"
            style="@style/FirebaseUI.Button.AccountChooser.EmailButton"
            android:layout_width="wrap_content"


            android:layout_height="@dimen/fui_submit_button_margin_top"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="60dp"
            android:layout_marginBottom="33dp"
            android:text="   Si   "
            android:textAlignment="center"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btnNo"
            style="@style/FirebaseUI.Button.AccountChooser.EmailButton"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/fui_submit_button_margin_top"

            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="33dp"
            android:layout_marginEnd="60dp"
            android:text="   No   "
            android:textAlignment="center"
            android:textSize="24sp" />
    </RelativeLayout>


    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_weight="1"
        android:gravity="bottom"
        android:text="¿Eres mayor de 18?"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:textStyle="bold" />







</LinearLayout>

